{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
  <h1>Project</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Source name</th>
        <th>Targets</th>
      </tr>
      <tr>
        <td>{{ source.source }}</td>
        <td>
          {% for target in source.targets %}
            <strong>{{ target.getLang.getCode }}</strong>:{{ target.target|nl2br }}<br>
              {{ include('traducteur/_delete_form.html.twig') }}
              <a href="{{ path('traducteur_edit', {'id': target.id}) }}">edit</a><br>

          {% endfor %}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('traducteur_project', {'id': source.getProject.getId}) }}">back to list</a>
{% endblock %}

